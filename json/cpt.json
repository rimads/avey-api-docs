{
  "openapi": "3.1.0",
  "info": {
    "title": "Avey CPT API",
    "description": "API for CPT code inference using LLM technology",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.avey.ai",
      "description": "Production"
    }
  ],
  "paths": {
    "/cpt/code/": {
      "post": {
        "summary": "Classify to CPT Codes",
        "description": "Send a procedure description and a k value to receive a ranked list of CPT codes.",
        "operationId": "prompt_llm_cpt_code__post",
        "parameters": [
          {
            "name": "k",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "null"
                }
              ],
              "description": "The number of top codes to return. If None, returns all ranked codes.",
              "title": "K"
            },
            "description": "The number of top codes to return. If None, returns all ranked codes."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InferenceRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response from CPT API.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InferenceResponse"
                }
              }
            }
          },
          "422": {
            "description": "LLM failed to get response from text."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "InferenceRequest": {
        "properties": {
          "text": {
            "type": "string",
            "title": "Text",
            "description": "The description of the procedure"
          }
        },
        "type": "object",
        "required": ["text"],
        "title": "InferenceRequest",
        "description": "Request model for CPT code inference API."
      },
      "InferenceResponse": {
        "properties": {
          "code": {
            "items": {
              "type": "string",
              "description": "A CPT code representing a medical procedure"
            },
            "type": "array",
            "title": "Code",
            "description": "List of ranked CPT codes"
          }
        },
        "type": "object",
        "required": ["code"],
        "title": "InferenceResponse",
        "description": "Response model for CPT code inference API."
      }
    }
  }
}
