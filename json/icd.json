{
  "openapi": "3.1.0",
  "info": { "title": "FastAPI", "version": "0.1.0" },
  "servers": [{ "url": "https://api.avey.ai" }],
  "paths": {
    "/code": {
      "post": {
        "summary": "Code Free Text",
        "description": "Code a clinical note or medical condition using ICD10-CM code(s)",
        "operationId": "code",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ClinicalNote" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful ICD10-CM codes classification",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ICD10CMLabels" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/extract": {
      "post": {
        "summary": "Extract Medical Conditions",
        "description": "Extract medical conditions from a clinical note",
        "operationId": "extract",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ClinicalNote" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful extraction of medical conditions",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MedicalConditions" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClinicalNote": {
        "properties": {
          "note": {
            "type": "string",
            "title": "Clinical Note",
            "description": "Unstructured free-text input provided by a healthcare professional. May include symptoms, observations, diagnoses, and other relevant medical context.",
            "example": "The patient reports shortness of breath and intermittent chest pain over the last 3 days."
          }
        },
        "type": "object",
        "required": ["note"],
        "title": "ClinicalNote",
        "description": "Schema representing an unstructured clinical note provided by a healthcare professional."
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": { "$ref": "#/components/schemas/ValidationError" },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "ICD10CMLabels": {
        "properties": {
          "labels": {
            "items": {
              "type": "string",
              "title": "ICD-10-CM Code",
              "description": "An individual ICD-10-CM code in standard format.",
              "example": "R06.02"
            },
            "type": "array",
            "title": "ICD-10-CM Code List",
            "description": "List of ICD-10-CM codes identified or assigned based on the clinical note.",
            "examples": ["R06.02", "R07.9"]
          }
        },
        "type": "object",
        "title": "ICD10CMLabels",
        "description": "Schema representing a list of ICD-10-CM diagnostic codes derived from a clinical note.\n\nThese codes reflect structured medical classifications assigned based on the content\nof the unstructured clinical note."
      },
      "MedicalConditions": {
        "properties": {
          "conditions": {
            "items": { "type": "string" },
            "type": "array",
            "title": "Extracted Medical Conditions",
            "description": "List of medical conditions or diseases mentioned in the clinical note. These are plain English terms such as 'diabetes mellitus', 'asthma', or 'hypertension'.",
            "examples": ["shortness of breath", "chest pain"]
          }
        },
        "type": "object",
        "required": ["conditions"],
        "title": "MedicalConditions",
        "description": "Schema representing medical conditions extracted from a clinical note."
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": { "anyOf": [{ "type": "string" }, { "type": "integer" }] },
            "type": "array",
            "title": "Location"
          },
          "msg": { "type": "string", "title": "Message" },
          "type": { "type": "string", "title": "Error Type" }
        },
        "type": "object",
        "required": ["loc", "msg", "type"],
        "title": "ValidationError"
      }
    }
  }
}
